{
  "redirects": [
    {
      "source": "/(.*)",
      "has": [
        {
          "type": "host",
          "value": "www.disclosurely.com"
        }
      ],
      "destination": "https://disclosurely.com/$1",
      "permanent": true
    },
    {
      "source": "/:path+/",
      "destination": "/:path+",
      "permanent": true
    },
    {
      "source": "/en",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/en/:path*",
      "destination": "/:path*",
      "permanent": true
    },
    {
      "source": "/submit",
      "destination": "/report",
      "permanent": true
    },
    {
      "source": "/whistleblow",
      "destination": "/report",
      "permanent": true
    },
    {
      "source": "/auth/login",
      "destination": "/login",
      "permanent": true
    },
    {
      "source": "/auth/signup",
      "destination": "/signup",
      "permanent": true
    },
    {
      "source": "/(.*)",
      "has": [
        {
          "type": "host",
          "value": "docs.disclosurely.com"
        }
      ],
      "destination": "https://disclosurely.com/docs/$1",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=(), payment=()"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://www.googletagmanager.com https://www.google-analytics.com https://js.stripe.com https://*.sentry.io https://www.redditstatic.com; style-src 'self' 'unsafe-inline'; img-src 'self' data: https: blob: https://staticmap.openstreetmap.de; font-src 'self' data: https://fonts.gstatic.com; connect-src 'self' https://cxmuzperkittvibslnff.supabase.co wss://cxmuzperkittvibslnff.supabase.co https://api.stripe.com https://*.sentry.io https://ipapi.co https://status.disclosurely.com https://www.google-analytics.com https://events.reddit.com https://ads-api.reddit.com https://conversions-config.reddit.com https://pixel-config.reddit.com https://cdn.contentful.com; worker-src 'self' blob:; frame-src 'self' https://js.stripe.com https://www.googletagmanager.com https://www.openstreetmap.org; frame-ancestors 'none'; base-uri 'self'; form-action 'self'; upgrade-insecure-requests"
        }
      ]
    }
  ],
  "rewrites": [
    { "source": "/sitemap.xml", "destination": "/api/sitemap.xml" },
    { "source": "/sitemap-index.xml", "destination": "/api/sitemap-index.xml" },
    {
      "source": "/docs/:path*",
      "destination": "https://docs.disclosurely.com/:path*",
      "has": [
        {
          "type": "host",
          "value": "disclosurely.com"
        }
      ]
    },
    {
      "source": "/assets/:path*",
      "destination": "https://docs.disclosurely.com/assets/:path*",
      "has": [
        {
          "type": "host",
          "value": "disclosurely.com"
        }
      ]
    },
    {
      "source": "/logo.png",
      "destination": "https://docs.disclosurely.com/logo.png",
      "has": [
        {
          "type": "host",
          "value": "disclosurely.com"
        }
      ]
    },
    {
      "source": "/logo-light.png",
      "destination": "https://docs.disclosurely.com/logo-light.png",
      "has": [
        {
          "type": "host",
          "value": "disclosurely.com"
        }
      ]
    },
    {
      "source": "/logo-dark.png",
      "destination": "https://docs.disclosurely.com/logo-dark.png",
      "has": [
        {
          "type": "host",
          "value": "disclosurely.com"
        }
      ]
    },
    {
      "source": "/((?!assets/|api/|_next/|favicon\\.ico|robots\\.txt|sitemap.*\\.xml|docs/|logo.*\\.png|.*\\.[a-z]{2,4}$).*)",
      "destination": "/index.html"
    }
  ]
}